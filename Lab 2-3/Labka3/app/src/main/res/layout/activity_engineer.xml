<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    tools:context=".EngineerActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:columnCount="5"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textField"
            android:layout_height="61dp"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill"
            android:layout_marginBottom="16dp"
            android:background="@color/textViewColor"  />

        <Button
            android:id="@+id/operation_button_sqrt"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="@string/sqrt" />

        <Button
            android:id="@+id/operation_button_tan"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="4"
            android:layout_column="2"
            android:text="@string/tan" />

        <Button
            android:id="@+id/operation_button_pow"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="@string/x_y" />

        <Button
            android:id="@+id/operation_button_equal"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="4"
            android:layout_column="4"
            android:layout_gravity="fill"
            android:text="@string/_res" />


        <Button
            android:id="@+id/button5"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/_5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/_6" />

        <Button
            android:id="@+id/button7"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/_7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/_8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/_9" />

        <Button
            android:id="@+id/button0"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="3"
            android:layout_column="3"
            android:text="@string/_0" />

        <Button
            android:id="@+id/button1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/_1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="@string/_2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="@string/_3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/_4" />

        <Button
            android:id="@+id/operation_button_dot"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="4"
            android:text="@string/tochk" />

        <Button
            android:id="@+id/operation_button_change"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="@string/plusmin" />

        <Button
            android:id="@+id/operation_button_del"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_gravity="fill"
            android:text="@string/del" />

        <Button
            android:id="@+id/operation_button_sin"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="@string/sin" />

        <Button
            android:id="@+id/operation_button_cos"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="@string/cos" />

    </GridLayout>

    <Button
        android:id="@+id/stepToNormal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/goToNormal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.871"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>